JMPA 0x0030

    ORG 0x0040
LOAD %1 #5
LOAD %D #hello

:print_x
    LOAD %2 %D

    ; Print X
    STR %2 0xFFFF

    ; Add r1 and r2 (r1 - 1), store in r1
    ADD %1 #0xFF

    ADD %D #1

    ; Check if loop counter is 0
    JMP %1 end

    ; Unconditional jump to print X
    JMPA print_x

:end
    ; Exit
    HALT


    ORG 0x00E0

:hello
    "Hello"
