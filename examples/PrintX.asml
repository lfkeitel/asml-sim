; Register 1 - loop counter
LOADI %1 3

; Register 2 - constant -1
LOADI %2 0xFFFF

; Register 3 - char X
LOADI %3 'X'

:print_x
; Print X
STRA %3 0xFFFE

; Add r1 and r2 (r1 - 1), store in r1
ADD %1 %1 %2

; Check if loop counter is 0
JMP %1 ~end

; Unconditional jump to print X
JMP %0 ~print_x

:end
; Exit
HALT
