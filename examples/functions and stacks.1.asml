; Print "Hello" using a print function

; Same as other version but less fancy

:main
    LDSPI 0x00FF

    ; Print H
    LOADI %1 "H"
    CALL print

    ; Print e
    LOADI %1 "e"
    CALL print

    ; Print ll
    LOADI %1 "l"
    CALL print

    LOADI %1 "l"
    CALL print

    ; Print o
    LOADI %1 "o"
    CALL print

    HALT

; Subroutines

; Print the argument in R1
:print
    ; Print arg 1
    STRA %1 0xFFFF
    ; Return
    RTN
